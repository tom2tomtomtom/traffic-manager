# Alt/Shift Traffic Manager - Backend Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Your Supabase project URL
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co

# Supabase service role key (SECRET - never expose in browser!)
# Found in: Supabase Dashboard > Project Settings > API > service_role secret
# This key bypasses Row Level Security - use only server-side
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# ANTHROPIC (CLAUDE) CONFIGURATION
# =============================================================================

# Your Anthropic API key
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# CORS allowed origins (JSON array format)
# Development: ["http://localhost:3000"]
# Production: ["https://your-domain.com"]
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# Debug mode (enables /docs endpoint)
DEBUG=true
